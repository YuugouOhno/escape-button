{
    "name": "モテたいけど、逃げられたい？ そんな君には「モテ逃げボタン」",
    "description": "Webサイト上のボタンから、煽られたりモテたりするChrome拡張です。",
    "manifest_version": 3,
    "version": "1.0.0.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "style.css"
            ],
            "js": [
                "stalker.js",
                "reload.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
    feature/settings
        "default_popup": "options.html",
        "icons": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "author": "効率厨",
    "permissions": [
        "storage"
    ]
}