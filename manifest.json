{
    "name": "モテたいけど、逃げられたい？ そんな君には「モテ逃げボタン」",
    "description": "Webサイト上のボタンから、煽られたりモテたりするChrome拡張です。",
    "manifest_version": 3,
    "version": "1.0.0.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "style.css"
            ],
            "js": [
                "content_scripts.js",
                "stalker.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }, 
    "action": {
        "default_popup": "options.html"
    }
}